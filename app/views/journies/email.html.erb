<div class="container info-box">
  <h1 style="text-align: center; color: #0075b4;font-family: Source Sans Pro,Arial,Helvetica,sans-serif; font-size: 40px">Community Search</h1>
  <p style="font-family: Source Sans Pro,Arial,Helvetica,sans-serif">
    There are a total of <strong><%= @communities.count %> communities</strong> that are potential matches. <br>
    
    What is your email address?
  </p>

<%= form_for(@lead, url: update_email_journies_path(prospect_id: @prospect.id, lead_id: @lead.id)) do |f| %>
   <% if @lead.errors.any? %>
    <div id="error_explanation">
    <div class="alert alert-danger">
    The form contains <%= pluralize(@lead.errors.count, "error") %>.
    </div>
    <ul>
    <% @lead.errors.full_messages.each do |msg| %>
    <li id="error"><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Email</span>
          <%= f.text_field :email, class: 'form-control', placeholder: 'Enter valid email address' %>
        </div>
      </div>
    </div>
    <%= f.submit "Next", class: "btn btn-primary" %>          
<% end %>

</div>
<br>