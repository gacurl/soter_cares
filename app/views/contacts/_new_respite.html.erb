<%= form_for(@respite, url: contact_save_respite_path([@contact, @respite]), remote: true) do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 style="display:inline" class="modal-title">Add Respite Stay</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-condensed ero-table">
          <tr>
            
              <td style='font-weight: bold'>Start Date:</td>
              <td>
                <div class="col-sm-6">
                  <%= f.text_field :start, class: 'form-control pick-date', readonly: true %>
                </div>
              </td>
          </tr>
          <tr>
            
              <td style='font-weight: bold'>End Date:</td>
              <td>
                <div class="col-sm-6">
                  <%= f.text_field :stop, class: 'form-control pick-date', readonly: true %>
                </div>
              </td>
          </tr>
          <tr>
            <td style='font-weight: bold'>Community:</td><td><%= f.select :community_id, options_from_collection_for_select(
                  Community.all, :id, :name), { include_blank: true }, { class: 'form-inline selectpicker'} %></td>
          </tr>
        </table>    
      </div>
      <div class="modal-footer">
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
<% end %>

<script>
  $( function() {
    $( ".pick-date" ).datepicker({
      changeMonth: true,
      changeYear: true,
    });
    $('.selectpicker').selectpicker({
      });
  } );
</script>