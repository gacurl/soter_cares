<h6 style='margin-bottom: 1px'><%= page_entries_info contacts, :model => "contacts" %></h6>
    <%= will_paginate contacts, :param_name => 'contact_page', :style => 'font-size: 9px; margin: 1px' %>
 
<table class="table table-condensed ero-table">
      <tr style='font-weight: bold'>
        <td>Name</td>
        <td>Type</td>
        <td>Location</td>
        <td>Facility</td>
        <td>Company</td>
        <td>Position</td>
        <td></td>
      </tr>
    
    
    <% contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.name, contact %></td>
        <td><%= contact.contact_type %></td>
        <td><%= contact.location %></td>
        <td><%= contact.facility_name %></td>
        <td><%= contact.company_name %></td>
        <td><%= contact.position_title %></td>
        <td><%= link_to "Delete", contact, method: :delete,
                  data: { confirm: "Are you sure you want to delete #{contact.name}?" },
                  class: "btn-sm btn-danger" if current_user.admin %></td>
      </tr>
    <% end %>
    </table>
    <%= will_paginate contacts, :param_name => 'contact_page', :style => 'font-size: 9px; margin: 1px' %>
 